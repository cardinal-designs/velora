{% if color == 'dark' %}
    --background: #2B1D0A;
    --text: #F1ECE3;
    --button: #F1ECE3;
    --button_text: #2B1D0A;
{% elsif color == 'accent' %}
    --background: #95A3B7;
    --text: #2B1D0A;
    --button: #2B1D0A;
    --button_text: #95A3B7;
{% else  %}
    --background: #F1ECE3;
    --text: #2B1D0A;
    --button: #2B1D0A;
    --button_text: #F1ECE3;
{% endif %}