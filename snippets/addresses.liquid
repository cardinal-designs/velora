{% paginate customer.addresses by 20 %}
  <div class="addresses">

    <ul class="grid grid-cols-1 gap-40 md:grid-cols-2" role="list">
      {% for address in customer.addresses %}
        <li class="[&>p]:text-m-body md:[&>p]:text-body" data-address>
          {% if address == customer.default_address %}
            <p class="mb-5 text-m-body md:text-body">{{ 'customer.addresses.default' | t }}</p>
          {% else %}
            {% assign position = paginate.current_page | times: forloop.index %}
            <p class="mb-5 text-m-body md:text-body">Address {{ position }}</p>
          {% endif %}
          {{ address | format_address }}
          <div class="mt-20 md:mt-30 flex gap-20">
            <button
              class="text-body underline underline-offset-4"
              type="button"
              id="EditFormButton_{{ address.id }}"
              aria-label="Edit {{ forloop.index }}"
              aria-controls="EditAddress_{{ address.id }}"
              aria-expanded="false"
              data-address-id="{{ address.id }}"
              data-micromodal-trigger="address-edit--{{ address.id }}">
              Edit
            </button>
            <button
              class="text-body underline underline-offset-4"
              type="button"
              aria-label="Remove {{ forloop.index }}"
              data-target="{{ address.url }}"
              data-confirm-message="Are you sure you want to delete this address?">
              Remove
            </button>
          </div>
        </li>
      {% endfor %}

      {% if customer.addresses.size == 0 %}
        <p class="text-m-body md:text-body">No addresses found.</p>
      {% endif %}

      <li>
        <div data-address>
          <button
            class="w-full button button--bright md:w-auto"
            type="button"
            aria-expanded="false"
            aria-controls="AddAddress"
            data-micromodal-trigger="address-add">
            Add a New Address
          </button>
        </div>
      </li>
    </ul>

    {% if paginate.pages > 1 %}
      {% render 'pagination', paginate: paginate, anchor: '' %}
    {% endif %}

  </div>
{% endpaginate %}

{% comment %}ADD ADDRESS{% endcomment %}
<div
  class="account__modal modal micromodal-slide"
  id="address-add"
