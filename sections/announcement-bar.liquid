{% if section.blocks != blank %}
<div class="py-5 text-center bg-blue text-brown">
  <div class="animate-marquee md:animate-none no-scrollbar md:overflow-x-auto">
    <div class="mx-auto w-fit flex flex-row justify-center items-center gap-50 *:whitespace-nowrap">
      {% for block in section.blocks %}
        <p class="text-pangram-12 leading-[30px]">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="">
              {{ block.settings.heading }}
            </a>
          {% else %}
            {{ block.settings.heading }}
          {% endif %}
        </p>
      {% endfor %}

      {% comment %} duplicate items for smaller browsers {% endcomment %}
      {% for block in section.blocks %}
        <p class="text-pangram-12 leading-[30px] block md:hidden">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="">
              {{ block.settings.heading }}
            </a>
          {% else %}
            {{ block.settings.heading }}
          {% endif %}
        </p>
      {% endfor %}

    </div>
  </div>
</div>
{% endif %}

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [],
  "blocks": [
    {
      "name": "Block",
      "type": "block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ]
}
{% endschema %}
