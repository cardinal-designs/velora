<div class="h-[150px] flex justify-center items-center relative border-b-1 border-black md:h-[200px]">
  {% if section.settings.image != blank %}
    {{ section.settings.image | image_url: width: 2000 | image_tag: preload: true, width: section.settings.image.width, class: 'w-full h-full inset object-cover', sizes: '100vw', widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000' }}
    {% if section.settings.mobile_image != blank %}
      {{ section.settings.mobile_image | image_url: width: 2000 | image_tag: preload: true, width: section.settings.mobile_image.width, class: 'w-full h-full inset object-cover block md:hidden', sizes: '100vw', widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000' }}
    {% endif %}
  {% endif %}
  <div class="page-width">
    <div class="max-w-custom mx-auto text-center" style="--width: 600px">
      <h2 class="text-m-h2 font-bold md:text-arizona-72">
        {% if section.settings.title != blank %}
          {{ section.settings.title }}
        {% else %}
          {{ page.title }}
        {% endif %}
      </h2>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Page Header",
    "settings": [
      {
        "type": "header",
        "content": "Button"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "mobile_image",
        "label": "Mobile Image"
      },
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "info": "Leave blank to use default page title."
      }
    ],
    "presets": [
      {
        "name": "Page Header"
      }
    ]
  }
{% endschema %}