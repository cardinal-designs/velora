<div class="bg-[var(--background)] text-[var(--text)] py-[28px] md:py-60 lg:py-[86px]" style="{% render "color-variables", color: section.settings.color %}">
    <div class="border-t border-b border-[var(--text)] flex flex-col-reverse lg:grid grid-cols-12 gap-x-10 gap-y-[28px] lg:gap-y-40 relative">        
        <div class="col-start-1 {% if section.settings.image != blank %}col-span-6{% else %}col-span-12{% endif %} lg:pt-50 lg:pb-[33px]">
           <div class="page-width">
            <div class="flex flex-col justify-start items-start">
                <h2 class="text-arizona-36 lg:text-arizona-48 text-center self-center">{{ section.settings.heading }}</h2>
            </div>

            {% for block in section.blocks %}
                {% render block %}
            {% endfor %}

            </div>

        </div>

        {% if section.settings.image != blank %}
            <div class="col-span-6 col-start-7">
                <div class="w-full h-full relative aspect-[0.9/1] lg:aspect-auto">
                    {{ section.settings.image | image_url: width: 1200 | image_tag: class: 'w-full h-full inset object-cover' }}
                </div>
            </div>
        {% endif %}
    </div>
</div>

{% schema %}
    {
        "name": "App/Image",
        "settings": [
            {
                "type": "select",
                "id": "color",
                "label": "Section colors",
                "options": [
                    {
                        "label": "Light",
                        "value": "light"
                    },
                    {
                        "label": "Dark",
                        "value": "dark"
                    }
                ],
                "default": "dark"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Reviews"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            }
        ],
        "blocks": [
            {
                "type": "@app"
            }
        ],
        "presets": [
            {
                "name": "App/Image"
            }
        ]
    }
{% endschema %}